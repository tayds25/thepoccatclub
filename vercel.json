{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
        ],
        "functions": {
        "api/server.js": {
            "memory": 1024,
            "maxDuration": 10
        }
        },
        "env": {
        "ATLAS_URI": "@atlas_uri",
        "ADMIN_SECRET": "@admin_secret"
        }
}